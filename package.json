{
  "name": "enterprise-nest",
  "type": "module",
  "version": "1.0.0",
  "description": "A Enterprise-Level API Framework based on NestJS, built for scaleability, best-practise and robustness. Based on DDD, Onion, Clean and Hexagonal Architecture.",
  "scripts": {
    "prepare": "husky || true",
    "preinstall": "syncpack fix-mismatches || true",
    "------ DEVELOPMENT  ------": "",
    "dev": "tsup --watch",
    "build": "NODE_ENV=production tsup",
    "start": "node dist/index.js",
    "------ GENERATION  ------": "",
    "generate": "turbo gen -c generators/config.ts",
    "------ TESTING  ------": "",
    "test": "echo \"Error: no test specified\" && exit 1",
    "------ LINTING  ------": "",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "------ FORMATTING  ------": "",
    "format": "prettier --write .",
    "------ TYPECHECKING  ------": "",
    "typecheck": "tsc --noEmit",
    "------ DOCS  ------": "",
    "docs": "echo \"Error: no docs specified\" && exit 1",
    "------ MISC  ------": "",
    "clean": "rm -rf dist",
    "------ CI  ------": "",
    "ci": "npm run lint && npm run typecheck && npm run test",
    "------ Docker ------": "",
    "docker:build": "docker build -t enterprise-nest ."
  },
  "keywords": [],
  "author": "TheGoatedDev",
  "license": "MIT",
  "devDependencies": {
    "@nestjs/testing": "10.3.9",
    "@swc/jest": "0.2.36",
    "@turbo/gen": "2.0.4",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "20.14.3",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.1.0",
    "@vercel/style-guide": "5.1.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-simple-import-sort": "12.0.0",
    "eslint-plugin-unused-imports": "3.1.0",
    "husky": "9.0.11",
    "inquirer": "^9.2.23",
    "jest": "29.7.0",
    "lint-staged": "15.2.7",
    "prettier": "3.3.2",
    "supertest": "7.0.0",
    "syncpack": "12.3.2",
    "tsup": "8.1.0",
    "turbo": "2.0.4",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "@nestjs/common": "10.3.9",
    "@nestjs/config": "3.2.2",
    "@nestjs/core": "10.3.9",
    "@nestjs/platform-express": "10.3.9",
    "@nestjs/swagger": "7.3.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.47.1",
    "@opentelemetry/context-async-hooks": "^1.25.0",
    "@opentelemetry/instrumentation-pino": "^0.40.0",
    "@opentelemetry/sdk-node": "^0.52.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "dotenv": "16.4.5",
    "helmet": "7.1.0",
    "nestjs-otel": "^6.1.1",
    "nestjs-pino": "4.1.0",
    "pino": "9.2.0",
    "pino-pretty": "11.2.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "zod": "3.23.8"
  }
}
